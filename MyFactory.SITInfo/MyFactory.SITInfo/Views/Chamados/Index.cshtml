@model  List<MyFactory.SITInfo.Models.Chamado>

@{
    ViewBag.Title = "Gerenciamento de Chamados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Anuncios", new { id = 0 }, FormMethod.Post, null))
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Registros de Chamados</h3>
            @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary pull-right" })

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Data Abertura</th>
                        <th>Email</th>
                        <th>Titulo</th>
                        @*<th>Descrição</th>*@
                        <th>Prioridade</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7">Nenhuma informação encontrada.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.DataAbertura</td>
                            <td>@item.EmailUsuario</td>
                            <td>@item.Titulo</td>
                            @*<td>@item.Descricao</td>*@
                            <td>@item.Prioridade</td>
                            <td>
                                @Html.ActionLink("Excluir ", "ConfirmDelete", "Chamados", new { id = item.id }, new { @class = "modal-link btn btn-danger" })
                                @Html.ActionLink("Editar ", "Edit", "Chamados", new { id = item.id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Ver Dados", "Details", "Chamados", new { id = item.id }, new { @class = "btn btn-success fit-width" })
                            </td>
                        </tr>
                        }
                    }

                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>


}


