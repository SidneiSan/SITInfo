@model  List<MyFactory.SITInfo.Models.Usuario>

@{
    ViewBag.Title = "Gerenciamento de Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Delete", "Anuncios", new { id = 0 }, FormMethod.Post, null))
{
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Registros de usuários</h3>
            @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary pull-right" })

        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Senha</th>
                        <th>Ativo</th>
                        <th>Tipo de Conta</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7">Nenhuma informação encontrada.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nome</td>
                                <td>@item.Email</td>
                                <td>***********</td>
                                @if (@item.Ativo)
                                {
                                    <td>Ativo</td>
                                }
                                else
                                {
                                    <td>Inativo</td>
                                }
                                <td>@item.TipoConta</td>
                                <td>
                                    @Html.ActionLink("Excluir ", "ConfirmDelete", "Usuarios", new { id = item.Id }, new { @class = "modal-link btn btn-danger" })
                                    @Html.ActionLink("Editar ", "Edit", "Usuarios", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Ver Dados", "Details", "Usuarios", new { id = item.Id }, new { @class = "btn btn-success fit-width" })
                                </td>
                            </tr>
                        }
                    }

                </tbody>
                <tfoot>
                </tfoot>
            </table>
        </div>
    </div>

}



